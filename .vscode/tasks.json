{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run-dev-browser",
            "type": "shell",
            "command": "npm start",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "launch-browser",
            "type": "shell",
            "windows": {
                "command": "start http://localhost:8100/"
            },
            "isBackground": false,
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "run-dev-browser",
                "launch-browser"
            ],
            "problemMatcher": []
        }
    ]
}
